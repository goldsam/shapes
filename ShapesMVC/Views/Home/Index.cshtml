<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Shape Generator</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")

</head>
<body ng-app="ShapesApp">
    <div id="overlay"></div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/#">Shape Generatior Deluxe 5000</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#Shapes">Home</a></li>
                    <li><a href="#About">About</a></li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div id="bodyContainer">
            <section id="content">
                <div ng-view></div>
            </section>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Samuel Goldmann</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/app/ShapesApp.js")
</body>
</html>
